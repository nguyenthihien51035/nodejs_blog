<div class="mt-4">
    <h3>Cập nhật khóa học</h3>
    <form method="POST" class="mt-4" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên</label>
            <input type="text" class="form-control" value="{{course.name}}" name="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea class="form-control" name="description">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoid">Video ID</label>
            <input type="text" class="form-control" value="{{course.videoid}}" name="videoid">
        </div>
        <button type="submit" class="btn btn-primary">Cập nhật</button>
    </form>
</div>